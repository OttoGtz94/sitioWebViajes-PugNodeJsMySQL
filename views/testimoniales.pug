//- Para extender la master page se usa la palabra extends seguido de la ruta de la master page, despu√©s se usa la palabra block seguido del nombre asignado del
//- archivo padre
extends ./layout/index.pug
block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Nuestros usuarios comentan sus experiencias 
        include ./layout/bloque_testimoniales
        .row 
            .col-md-12
                h2.d-block.w-100.text-center Escribe tu experiencia 
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center #{error.mensaje}
                
            .row.justify-content-center.col 
                .col-md-8 
                    form(action="" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control", value= nombre)
                        .form-group 
                            label(for="correo") Correo 
                            input#correo(type="text", placeholder="Tu correo", name="correo", class="form-control", value= correo)
                        .form-group 
                            label(for="mensaje") Mensaje 
                            textarea#mensaje(name="mensaje", class="form-control", placeholder="Tu mensaje", rows= 3) #{mensaje}
                        input.btn.btn-success.btn-block(type="submit" value="Enviar") 